<div class="row">
	<div class="span6 well">
		<%= form_for(resource, :as => resource_name, 
						:url =>registration_path(resource_name), 
						:html => { :method => :put, class:"form-horizontal" }) do |f| %>
		  
			<%= devise_error_messages! %>
	
			<legend>修改密码</legend>
	
		  <div class="control-group">
				<%= f.label :password, "新密码", class:"control-label" %>
				<div class="controls">
		  		<%= f.password_field :password, :autocomplete => "off" %>
				</div>
			</div>
	
			<div class="control-group">
		  	<%= f.label :password_confirmation, "确认新密码", class:"control-label" %>
				<div class="controls">
					<%= f.password_field :password_confirmation %>
				</div>
		  </div>

		  <div class="control-group">
				<%= f.label :current_password, "旧密码", class:"control-label" %>
				<div class="controls">
					<%= f.password_field :current_password %>
				</div>
		  </div>

		  <div class="controls">
				<%= f.submit "  更新  ", class:"btn btn-success btn-large" %>
			</div>
		<% end %>
	</div>
</div>
