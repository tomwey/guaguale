<div class="form">
	<%= form_for(resource, :as => resource_name, 
									:url => session_path(resource_name), :html => { :class => "form-horizontal"}) do |f| %>
			<fieldset>
				<legend>商家登录</legend><br/>
				<% flash.each do |key,msg| %>
					<div class="alert alert-<%= key%> flash">
						<a class="close" href="#" data-dismiss="alert">&times;</a><%= msg %>
					</div>
				<% end %>
				<div class="control-group">
					<%= f.label :tel, "手机号", class:"control-label" %>
					<div class="controls">
						<%= f.text_field :tel, :placeholder => '请输入手机号码' %>
					</div>
				 </div>
					
				<div class="control-group">
					<%= f.label :password, "密码", class:"control-label" %>
					<div class="controls">
				  	<%= f.password_field :password %>
					</div>
				</div>
					
				<% if devise_mapping.rememberable? -%>
						<div class="control-group">
							<div class="controls">
								<label for="customer_remember_me" class="checkbox">
									<%= f.check_box :remember_me %> 记住登录状态</label>
								</label>
							</div>
							<div class="controls">
								<%= f.submit "  登录  ", class:"btn btn-success btn-large" %>
							</div>
						</div>
				<% end -%>
				</div>
			</fieldset>
	<% end %>
</div>
