<div class="row">
	<div class="span6 offset1 well">
			<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-horizontal" }) do |f| %>
			  <%= devise_error_messages! %>
				<fieldset>
					<legend>忘记了密码</legend><br/>
				  <div class="control-group">
						<%= f.label :email, "邮箱", class:"control-label" %>
						<div class="controls">
							<%= f.email_field :email %>
							<p class="help-block">此功能将会发送一个找回密码的特别链接到你的邮箱，通过改链接可以进入重置密码的页面。</p>
						</div>
				  </div>

				  <div class="controls">
						<%= f.submit "找回密码",class:"btn btn-primary btn-large" %>
					</div>
				</fieldset>
			<% end %>
	</div>
	<div class="span2 well">
			<%- if controller_name != 'sessions' %>
			  <%= link_to "登录", new_session_path(resource_name) %><br />
			<% end -%>
	</div>
</div>